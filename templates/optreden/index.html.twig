{% extends 'base.html.twig' %}

{% block title %}Optreden {% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: #5eb5e0;">
        <a class="navbar-brand" >Younes Aoquab</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="/default">Home <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="/artiest">Artiesten</a>
                <a class="nav-item nav-link active" href="/optreden">Optredens</a>
                <a class="nav-item nav-link" href="/contact">Contact</a>
            </div>
        </div>
    </nav>
    <h2>Optreden</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datum</th>
                <th>Aanvang</th>
                <th>Zaal</th>
                <th>MaxSeats</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for optreden in optredens %}
            <tr>
                <td>{{ optreden.id }}</td>
                <td>{{ optreden.Datum ? optreden.Datum|date('Y-m-d') : '' }}</td>
                <td>{{ optreden.Aanvang ? optreden.Aanvang|date('H:i:s') : '' }}</td>
                <td>{{ optreden.Zaal }}</td>
                <td>{{ optreden.maxSeats }}</td>
                <td>
                    <a href="{{ path('optreden_show', {'id': optreden.id}) }}">show</a>
                    <a href="{{ path('optreden_edit', {'id': optreden.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('optreden_new') }}">Create new</a>
{% endblock %}
